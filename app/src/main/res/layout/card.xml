<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Teacher Name"
                android:textColor="#000"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Teacher Name"
                xmlns:tools="http://schemas.android.com/tools"/>

            <ImageButton
                android:id="@+id/time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_below="@+id/teacher_name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="time"
                android:layout_marginStart="8dp"
                android:text="Date of posting"
                android:layout_below="@+id/teacher_name"
                android:layout_toRightOf="@+id/time_icon"
                xmlns:tools="http://schemas.android.com/tools"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="25dp"
                android:background="#D3D3D3"
                android:visibility="visible"
                android:layout_below="@+id/time_icon"/>

            <TextView
                android:id="@+id/topic_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Teacher Name"
                android:maxLines="3"
                android:textColor="#2f4f4f"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:text="My name is Rahul pandeyd enfnej fjengnfejnfjnfjdngjdjgjdnfjd n fd gjnjf djngjd gjs gjnsdfjg gj gj sfjg jfs gj fg jf gsjj gfj gj fjg who the fuck are you mr bonding"
                android:layout_below="@+id/view"
                xmlns:tools="http://schemas.android.com/tools"/>



        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>